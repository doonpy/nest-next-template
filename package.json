{
  "name": "nest-next-template",
  "version": "0.0.1",
  "description": "Nest + Next template",
  "author": "Poon Nguyen",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint --fix --max-warnings=0 --ext .ts,.tsx .",
    "install-dependencies": "yarn install && yarn --cwd ./api install && yarn --cwd ./web install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e-api": "jest --config ./api/test/jest-e2e.json"
  },
  "engines": {
    "node": "^14.15.x",
    "yarn": "^1.22.x"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
