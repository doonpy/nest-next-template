{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "jsx": "preserve",
    "inlineSourceMap": true,
    "typeRoots": [
      "./src/types",
      "node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/views/tsconfig.json",
    "./src/views/next-env.d.ts"
  ]
}